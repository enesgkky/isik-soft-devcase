			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Status kontrolü (2xx)\r",
									"pm.test(\"OK\", function () {\r",
									"  pm.expect(pm.response.code).to.be.within(200, 299);\r",
									"});\r",
									"\r",
									"// JSON'u güvenli al\r",
									"let data = null;\r",
									"try { data = pm.response.json(); } catch (e) { /* boş ver */ }\r",
									"\r",
									"// Başarılıysa tokenları yakala ve global değişkenlere yaz\r",
									"if (data && pm.response.code >= 200 && pm.response.code < 300) {\r",
									"  const access  = data.accessToken  || data?.tokens?.accessToken;\r",
									"  const refresh = data.refreshToken || data?.tokens?.refreshToken;\r",
									"\r",
									"  if (access)  pm.globals.set(\"access_token\", access);\r",
									"  if (refresh) pm.globals.set(\"refresh_token\", refresh);\r",
									"}\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n    \"email\":\"eneagkky@gmail.com\",\r\n    \"password\":\"Enes123.\"\r\n}",
							"options": {
								"raw": {
